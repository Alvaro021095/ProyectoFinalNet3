@{
    ViewBag.Title = "SolicitarCita";
}

<script defer src="@Url.Content("~/Scripts/System/Paciente/SolicitarCita.js")" type="text/javascript"></script>


<h2>Solicitar Cita</h2>
<input id="txtId" type="hidden" />
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row clearfix">

        <div class=" col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <div class="">
                <div class="">
                    <label>Tipo Medico</label>
                    <select class="form-control" id="selTipoMe" onchange="cargarMedico();">
                        <option value="-1">Seleccione</option>
                    </select>
                </div>
            </div>
        </div>


        <div class=" col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <div class="">
                <div class="">
                    <label>Medico</label>
                    <select class="form-control" id="selIdMedico" onchange="cargarHorarioMedico();">
                        <option value="-1">Seleccione</option>
                    </select>
                </div>
            </div>
        </div>

        <div class=" col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <div class="">
                <div class="">
                    <label>Horario del Medico</label>
                    <select class="form-control" id="selIdMedicoHorario">
                        <option value="-1">Seleccione</option>
                    </select>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row clearfix">

        <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="">
                <div class="">
                    <label>
                        Numero de Cita
                    </label>
                    <input class="form-control"
                           id="txtNumero" required />
                </div>
            </div>
        </div>


        <div class=" col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <div class="">
                <div class="">
                    <label>
                        Fecha Cita
                    </label>
                    <input class="form-control"
                           id="dtFechaCita" required />
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<div class="container">

    <button type="button" class="btn btn-success" onclick="solicitarCita();">Solicitar Cita</button>

</div>

<br />
<div class="container">
    <h2>Listado</h2>
</div>
<div class="table-responsive" id="listado"></div>


<div class="container">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                @*<div class="modal-header">*@
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h1 class="modal-title">Aviso</h1>
                @*</div>*@
                <div class="modal-body">
                    <span id="avisos"></span>
                </div>
                <div class="row">
                    @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                </div>
            </div>

        </div>
    </div>

</div>
